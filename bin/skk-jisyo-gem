#!/usr/bin/env ruby

require "skk/jisyo"

include Skk::Jisyo

cmd = ARGV[0]
args = ARGV[1..-1]
case ARGV[0]
when "path"
  if args.empty?
    Skk::Jisyo.path
  else
    Skk::Jisyo.path(args.first)
  end
when "update"
  Skk::Jisyo.update
when "version"
  puts VERSION
else
  puts "usage: #$0 [path | update | version]"
end
